@model CreatePhoneViewModel
@{
    ViewData["Title"] = "AddProductToCategory";
}

<div class="row justify-content-center">
    <div class="col-md-7">
        <h1 style="text-align:center">Create Phone</h1>
        <hr />
        <form enctype="multipart/form-data" asp-controller="Phones" asp-action="CreatePhone" method="post" class="mt-3">
            <input asp-for="DisplayName" hidden />
            <div class="form-group row">
                <label asp-for="DisplayName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="DisplayName" class="form-control" placeholder="Display Name">
                    <span asp-validation-for="DisplayName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Manufacturer" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Manufacturer" class="form-control" placeholder="Manufacturer">
                    <span asp-validation-for="Manufacturer" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Model" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Model" class="form-control" placeholder="Category Name">
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Description" class="form-control" placeholder="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Price" class="form-control" placeholder="Price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="OldPrice" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="OldPrice" class="form-control" placeholder="Old Price">
                    <span asp-validation-for="OldPrice" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Quantity" class="form-control" placeholder="Quantity">
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Color" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="Color" class="custom-select mr-sm-2"
                            asp-items="Html.GetEnumSelectList<PhoneColor>()">
                        <option value="">Please Select</option>
                    </select>
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Storage" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="Storage" class="custom-select mr-sm-2"
                            asp-items="Html.GetEnumSelectList<PhoneStorage>()">
                        <option value="">Please Select</option>
                    </select>
                    <span asp-validation-for="Storage" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Photo" class="form-control custom-file-input">
                        <label class="custom-file-label">Choose File...</label>
                    </div>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <button type="submit" class="btn btn-primary col-12">Create</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}
